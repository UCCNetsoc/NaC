{
    "builders": [
        {
            "attach_options": [
                "--clear-env"
            ],
            "type": "lxc",
            "name": "{{user `name`}}",
            "config_file": "/etc/lxc/default.conf",
            "container_name": "{{user `name`}}-{{user `dist`}}-{{user `uuid`}}",
            "template_name": "download",
            "template_parameters": [
                "-d",
                "{{user `dist`}}",
                "-r",
                "{{user `rel`}}",
                "-a",
                "amd64"
            ],
            "output_directory": "{{user `packer_output`}}/{{user `name`}}-{{user `dist`}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "until ping -c1 www.google.com >/dev/null 2>&1; do :; done"
            ]
        },
        {
            "type": "ansible",
            "extra_arguments": [
                "-c",
                "lxc",
                "--extra-vars",
                "uuid={{user `uuid`}}"
            ],
            "inventory_file_template": "container ansible_host={{user `name`}}-{{user `dist`}}-{{user `uuid`}}",
            "playbook_file": "./lxc/{{user `playbook`}}.yml"
        }
    ]
}